# ========================================
# Supabase Configuration (Required)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Personal Access Token (for CLI and MCP)
SUPABASE_PAT=your-supabase-personal-access-token

# Supabase Project Reference
SUPABASE_PROJECT_REF=your-project-reference

# Database Direct Connection (Optional)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ========================================
# Application Configuration
# ========================================
NEXT_PUBLIC_APP_NAME=CNC OEE Monitoring System
NEXT_PUBLIC_DEFAULT_LANGUAGE=ko
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_MOCK_AUTH=false
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# ========================================
# API Configuration
# ========================================
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=3
NEXT_PUBLIC_CACHE_TTL=300000

# ========================================
# OEE Settings
# ========================================
NEXT_PUBLIC_DEFAULT_SHIFT_HOURS=12
NEXT_PUBLIC_DEFAULT_BREAK_MINUTES=60
NEXT_PUBLIC_OEE_TARGET_PERCENTAGE=85
NEXT_PUBLIC_AVAILABILITY_WARNING_THRESHOLD=70
NEXT_PUBLIC_PERFORMANCE_WARNING_THRESHOLD=75
NEXT_PUBLIC_QUALITY_WARNING_THRESHOLD=95

# ========================================
# Development Mock Authentication
# ========================================
DEV_ADMIN_EMAIL=admin@example.com
DEV_ADMIN_PASSWORD=admin-password
DEV_OPERATOR_EMAIL=operator@example.com
DEV_OPERATOR_PASSWORD=operator-password
DEV_ENGINEER_EMAIL=engineer@example.com
DEV_ENGINEER_PASSWORD=engineer-password

# ========================================
# Monitoring & Analytics (Optional)
# ========================================
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_HOTJAR_ID=

# ========================================
# External Services (Optional)
# ========================================
# SMTP Configuration for Email Notifications
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=

# Slack Integration
# SLACK_WEBHOOK_URL=
# SLACK_CHANNEL_ID=

# ========================================
# Security Configuration
# ========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-random-string
JWT_SIGNING_PRIVATE_KEY=generate-a-secure-jwt-key

# ========================================
# Edge Functions Configuration
# ========================================
EDGE_FUNCTION_BASE_URL=https://[PROJECT-REF].supabase.co/functions/v1
EDGE_FUNCTION_AUTH_TOKEN=your-edge-function-auth-token